{##
# Displays record primary key values into hidden form fields
##}
{% macro displayPrimaryKeyInput(context, model) %}
  {% if attribute(context.routeParameters, model.getConfig().primaryKey) %}
    {% set value = attribute(context.routeParameters, model.getConfig().primaryKey) %}
  {% elseif model.getConfig().primaryKeyAlias %}
    {% set value = attribute(context.routeParameters, model.getConfig().primaryKeyAlias) %}
  {% endif %}
  <input type="hidden" name="{{ model.getConfig().primaryKey }}" value="{{ value }}">
{% endmacro %}

{##
# Displays form buttons for cancel and submit
##}
{% macro displayDefaultButtons(context, backAction) %}
<div class="btn-group erp-form-default-buttons" role="group">
    <a href="{{ context._POST.callingFormRoute ?? buildRouteToActionFromRoot(backAction ?? 'list') }}" class="btn btn-light text-capitalize">{{ getActionLabel('cancel') }}</a>
    <button type="submit" class="btn btn-success text-capitalize">{{ getActionLabel(context.action) }}</button>
</div>
{% endmacro %}
